<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ticker</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.price %></td>
        <td>
          <% if user_stock.change_realtime %>
            <%= user_stock.change_realtime %>
          <% end %>
        </td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to 'Remove', user_stock_path(user_stock), method: :delete, 
                                            data: { confirm: "Are you sure?" }, 
                                            class: "btn btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
